<html>
<body>
<div class="panel-group m-bot20" id="accordion">
   <% Choices.each do |id, text| %> 
  <div class="panel panel-default">
    <div class="panel-heading">
      <a href="#collapse<%= id %>" class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion"><i class="fa fa-chevron-down"></i></a>
      <h4 class="panel-title">
        <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= id %>">
          <%= text %>
        </a>
        <input type='radio' name='vote' value='<%= id %>' id='vote_<%= id %>' />
      </h4>
      
    </div>
    <div id="collapse<%= id %>" class="panel-collapse collapse" style="height: auto;">
      <div class="panel-body">
        <%= text %>
      </div>
    </div>
  </div>
  <% end %>
</div>
</body>
</html>
