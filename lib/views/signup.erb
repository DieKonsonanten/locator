    <form class="login-form" action="/signup" method="post">        
      <div class="login-wrap">
          <p class="login-img"><i class="icon_lock_alt"></i></p>
          <div class="input-group">
            <span class="input-group-addon"><i class="icon_profile"></i></span>
            <input type="text" name="name" id="name" class="form-control" placeholder="Name" requiredautocomplete="on" autofocus>
          </div>
          <div class="input-group">
            <span class="input-group-addon"><i class="icon_mail"></i></span>
            <input type="email" name="email" id="email" class="form-control" placeholder="E-Mail" requiredautocomplete="on" autofocus>
          </div>
          <div class="input-group">
