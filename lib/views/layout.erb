<!DOCTYPE html>
<html>
  <head>
    <meta charset='UTF-8' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>die Konsonanten: Unternehmung</title>
    <!-- <link href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css' rel='stylesheet' /> -->
      <!-- Bootstrap CSS -->
      <link href="/NiceAdmin/css/bootstrap.min.css" rel="stylesheet">
      <!-- bootstrap theme -->
      <link href="/NiceAdmin/css/bootstrap-theme.css" rel="stylesheet">
      <!--external css-->
      <!-- font icon -->
      <link href="/NiceAdmin/css/elegant-icons-style.css" rel="stylesheet" />
      <link href="/NiceAdmin/css/font-awesome.css" rel="stylesheet" />
      <!-- Custom styles -->
      <link href="/NiceAdmin/css/style.css" rel="stylesheet">
      <link href="/NiceAdmin/css/style-responsive.css" rel="stylesheet" />
    <!-- Our JS File -->
      <script src="js/locator-scripts.js"></script>
  </head>
  <!-- <body class='container'> -->
    <script src="/NiceAdmin/js/jquery-1.8.3.min.js"></script>
    <script src="/NiceAdmin/js/bootstrap.min.js"></script>
    <script>
    $(document).ready(function(){  
      _msg='<%= @message %>';
      if (_msg || _msg.length) { 
        document.getElementById('alert-<%= @msg_type %>-text').innerHTML = _msg;
        $('#alert_<%= @msg_type %>').slideDown();
      } 
    });

    </script>
    <% if login? %>
      <div class="navbar-horizontal">
      <ul class="navbar-horizontal">
          <li class="navbar-horizontal"><a class="btn btn-primary" type="button" onclick="window.location.href='/voting'"><span class="icon_pencil"></span> Abstimmung</a></li>
          <li class="navbar-horizontal"><a class="btn btn-primary" type="button" onclick="window.location.href='/results'"><span class="icon_piechart"></span> Ergebnisse</a></li>
          <li class="navbar-horizontal"><a class="btn btn-primary" type="button" onclick="window.location.href='/profile'"><span class="icon_profile"></span> Profil</a></li>
          <% if admin? %>
              <li class="navbar-horizontal"><a class="btn btn-primary" type="button" onclick="window.location.href='/activate'"><span class="icon_cogs"></span> Aktivierung</a></li>
          <% end %>
          <li class="navbar-horizontal"><a class="btn btn-primary" type="button" onclick="window.location.href='/logout'"><span class="icon_lock_alt"></span> Logout</a></li>
      </ul>
    </div>
  <% end %>
  <div class="dynamic-content">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog modal-sm">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"></h4>
          </div>
          <div class="modal-body">
            <p></p>
          </div>
        </div>
      </div>
    </div>
    <h1><%= @title %></h1>
    <div class="alert alert-danger alert-dismissable collapse" role="alert" id="alert_danger">
      <a class="close"  aria-label="close"onclick="$('#alert_danger').hide()" >&times;</a>
      <strong>Achtung!</strong><p id="alert-danger-text"></p> 
    </div>
    <div class="alert alert-success alert-dismissable collapse" role="alert" id="alert_success">
      <a class="close"  aria-label="close"onclick="$('#alert_success').hide()" >&times;</a>
      <strong>Success!</strong><p id="alert-success-text"></p> 
    </div>
    <div class="alert alert-info alert-dismissable collapse" role="alert" id="alert_info">
      <a class="close"  aria-label="close"onclick="$('#alert_info').hide()" >&times;</a>
      <strong>Info!</strong><p id="alert-info-text"></p> 
    </div>
    </div>
    <%= yield %>
  </div>
  <!-- </body> -->
</html>
